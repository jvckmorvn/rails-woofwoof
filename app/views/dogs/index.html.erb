<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
</head>
<body>
<div class="mt-3">
  <div class="container">
    <div class="row">
      <div class="col-8">
        <h1>Browse dogs</h1>
          <% if @dogs.empty? %>
          <div class="mt-5">
            <h3>No dogs added</h3>
          </div>
        <% else %>
          <div class="container">
            <div class="row">
              <div class="dog-display">
                <% @dogs.each do |dog| %>
                  <div class="dog-card">
                    <div class="browsing-dog-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path dog.photos[0].key %>)"></div>
                    <div class="info-dog-card">
                    <strong> <%= link_to dog.name, dog_path(dog), style: "text-decoration: none; color: black;" %></strong>
                    üìç<%= link_to dog.location, dog_path(dog), style: "text-decoration: none; color: black;" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-4 mt-5">
        <h4 class="mb-3">Add a new dog</h4>
          <%= simple_form_for @dog do |f| %>
            <%= f.input :name %>
            <%= f.input :breed %>
            <%= f.input :age %>
            <%= f.input :location %>
            <%= f.collection_radio_buttons :sex, [[false, 'Male '], [true, 'Female']], :first, :last %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
            <%= f.button :submit, class: "create-dog-btn", value: "Add me!" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
<body>
