<div class="mt-3">
  <div class="container">
    <h1>My Dashboard</h1>
    <div class="row mt-5">
      <div class="col-6">
        <h3>My Dogs</h3>
        <% current_user.dogs.each do |dog| %>
          <%= dog.name %>
        <% end %>
      </div>
      <div class="col-6">
        <h3 class="mb-3">My Bookings</h3>
        <% current_user.bookings.each do |booking| %>
          <div class="mb-3">
            <p>I've booked <strong><%= booking.dog.name %></strong></p>
            <p><strong>From:</strong> <%= booking.start_date %></p>
            <p><strong>To:</strong> <%= booking.end_date %></p>
            <p><%= link_to "Delete", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none" %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
